{
  "name": "status-api-lambda",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pod-Point/status-api-lambda"
  },
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "test": "jest",
    "tsc": "tsc --noEmit --pretty",
    "deploy": "serverless deploy --stage production",
    "invoke": "serverless invoke local --function api"
  },
  "license": "proprietary",
  "devDependencies": {
    "@pod-point/tslint-config-podpoint-base": "^1.0.0",
    "@types/aws-lambda": "0.0.24",
    "@types/jest": "^22.0.0",
    "@types/node": "^8.5.2",
    "jest": "^22.0.4",
    "serverless-webpack": "^4.2.0",
    "ts-jest": "^22.0.0",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "@types/lodash": "^4.14.104",
    "aws-sdk": "^2.348.0",
    "dogapi": "^2.8.0",
    "lodash": "^4.17.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!**/node_modules/**",
      "!**/__mocks__/**",
      "!**/__tests__/**"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
